<!DOCTYPE html>
<html lang="en">

<head>
    <script src="/assets/vendor/PACE/pace.min.js"></script>
    <link rel="stylesheet" href="/assets/vendor/PACE/themes/red/pace-theme-minimal.css">


    <link rel="stylesheet" href="/assets/vendor/ekko-lightbox/dist/ekko-lightbox.css">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="lil-works">

    {{ sonata_seo_title() }}
    {{ sonata_seo_metadatas() }}

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet"
          href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">

    <link rel="stylesheet" href="{{ asset('bundles/site/css/shop-homepage.css') }}">

    <script src="{{ asset('bundles/site/js/jquery-2.2.2.min.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>


    <script src="{{ asset('bundles/app/js/formCollectionEditor.js') }}"></script>
    <script src="{{ asset('bundles/app/js/tabs.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/bootstrap-social/bootstrap-social.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
    <script src="{{ asset('bundles/app/js/utils.js') }}"></script>


    <link rel="stylesheet"
          href="{{ asset('bundles/site/css/siteGeneral.css') }}">
    <link rel="stylesheet"
          href="{{ asset('bundles/site/css/site.css') }}">

    <script>
        window.paceOptions = {
            ajax: false,
            restartOnRequestAfter: false,
        };
    </script>

</head>

<body>

<div class="row ">

    <div class="col-sm-1 col-md-1 logo">
        <img src="{{ asset('bundles/site/image/logo_ferre.png') }}">
    </div>

    <div class="col-sm-6 col-md-8 text">
        {{ render(controller('SiteBundle:Text:Text',{'tag':'site-header'})) }}
    </div>


    <div class="col-sm-5 col-md-3 ">
        {% if  basket is defined and basket.small() is defined %}
            <div class="basket">
                {{ basket.small()|raw }}
            </div>
        {% endif %}

        {{ render(controller('SiteBundle:User:Small')) }}
    </div>
</div>
<!-- Navigation -->
<nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">

    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarExample" aria-controls="navbarExample" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="container">
        <a class="navbar-brand" href="{{ path('site_homepage') }}">{% trans %}homepage{% endtrans %}</a>

        <div class="collapse navbar-collapse" id="navbarExample">
            {{ knp_menu_render('site', {'currentClass': 'active', 'template': 'Menu/knp_menu_site.html.twig'}) }}
        </div>

    </div>
</nav>

<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- /.col-lg-3 -->
        <div class="offset-lg-3 col-lg-6">
            <div class="card text-center" style="margin-top: 40px;margin-bottom: 40px;">
                <div class="card-header">
                    <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('fos_user_resetting_request') }}"><i class="fa fa-paper-plane" aria-hidden="true"></i> {% trans %}password request{% endtrans %}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('fos_user_registration_register') }}"><i class="fa fa-user-o" aria-hidden="true"></i> {% trans %}create your account{% endtrans %}</a></li>
                        </li>
                    </ul>
                </div>
                <div class="card-block">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>




        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->

<!-- Footer -->
<footer class="py-5 bg-inverse">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                {{ render(controller('SiteBundle:Text:Footer')) }}
            </div>
            <div class="col-lg-8 footerLinks">
                {{ render(controller('SiteBundle:Text:Text',{'tag':'footer-links'})) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ render(controller('SiteBundle:Category:All')) }}
            </div>
        </div>
    </div>
    <!-- /.container -->
</footer>

<!-- Bootstrap core JavaScript
    ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
<script>window.jQuery || document.write('<script src="{{ asset('assets/vendor/jquery/dist/jquery.js') }}"><\/script>')</script>
<script src="{{ asset('assets/vendor/tether/dist/js/tether.min.js') }}"></script>
<script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
<script src="{{ asset('assets/vendor/bootstrap/docs/assets/js/ie10-viewport-bug-workaround.js') }}"></script>
<script src="/assets/vendor/ekko-lightbox/dist/ekko-lightbox.js"></script>
<script>
    $(document).on('click', '[data-toggle="lightbox"]', function(event) {
        event.preventDefault();
        $(this).ekkoLightbox();
    });
</script>

</body>
</html>