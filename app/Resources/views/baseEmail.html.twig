<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
<head>
    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/site/css/siteGeneral.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/site/css/siteHome.css') }}">
    <link href="{{ asset('bundles/app/image/favicon.png') }}" rel="icon" type="image/png" >
</head>

<body>



        <img id="logo" src="{{ absolute_url(asset('bundles/site/image/logo_150.png')) }}">
        <div class="col-lg-12 "  id="header-text">
            {{ render(controller('SiteBundle:Text:Text',{'tag':'site-header'})) }}
        </div>

<div class="container">
    <div class="row" id="content">
        <div class="col-lg-12">
            {% block body %}
            {% endblock %}
        </div>
    </div>
</div>

<footer class="py-5 bg-inverse">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                {{ render(controller('SiteBundle:Text:Footer')) }}
            </div>
            <div class="col-lg-8 footerLinks">
                {{ render(controller('SiteBundle:Text:Text',{'tag':'footer-links'})) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ render(controller('SiteBundle:Category:All')) }}
            </div>
        </div>
    </div>
    <!-- /.container -->
</footer>



</body>
</html>