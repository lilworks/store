    <script src="{{ asset('bundles/site/js/jquery-2.2.2.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>


    <script src="{{ asset('bundles/app/js/formCollectionEditor.js') }}"></script>
    <script src="{{ asset('bundles/app/js/tabs.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/bootstrap-social/bootstrap-social.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
    <script src="{{ asset('bundles/app/js/utils.js') }}"></script>

    <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
    <script src="{{ url('bazinga_jstranslation_js') }}"></script>


    <script src="{{ asset('assets/vendor/bootstrap-select/dist/js/bootstrap-select.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap-slider/bootstrap-slider.js') }}"></script>
    <script src="http://seiyria.com/bootstrap-slider/js/bootstrap-slider.js"></script>

    <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/bootstrap-select/dist/css/bootstrap-select.min.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/bootstrap-slider/slider.css') }}" />

    <link rel="stylesheet"
          href="{{ asset('bundles/site/css/siteGeneral.css') }}">
    <link rel="stylesheet"
          href="{{ asset('bundles/site/css/siteHome.css') }}">
    <style>
        {{ render(controller('LilWorksStoreBundle:Ajax:Style')) }}">
    </style>

    <link href="{{ asset('bundles/app/image/favicon.png') }}" rel="icon" type="image/png" >
    <script>
        window.paceOptions = {
            ajax: false,
            restartOnRequestAfter: false
        };

    </script>


</head>

<body>



<div class="container-fluid" >
    <div class="row" id="header">
        <img id="logo" src="{{ asset('bundles/site/image/logo_ferre.png') }}">
        <div class="col-lg-9 " id="header-text">
            {{ render(controller('SiteBundle:Text:Text',{'tag':'site-header'})) }}
        </div>
        <div class="col-lg-3" id="header-card">
            {{ render(controller('SiteBundle:Site:userBasketSmall')) }}
        </div>
    </div>
</div>
<!-- Navigation -->
<nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse"  id="navigation">

    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar-site" aria-controls="navbarExample" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="container">
        <a class="navbar-brand" href="{{ path('site_homepage') }}">
            <i class="fa fa-home" aria-hidden="true"></i>
           {# {% trans %}lilworks.sitebundle.homepage{% endtrans %}#}
        </a>
        <div class="collapse navbar-collapse" id="navbar-site">
            {{ knp_menu_render('site',{ 'template': 'Menu/knp_menu_site.html.twig'}  ) }}
        </div>
    </div>
</nav>

<!-- Page Content -->
<div class="container">
    <div class="row" id="content">
        {% block body %}
        {% endblock %}
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->

<!-- Footer -->
<footer class="py-5 bg-inverse">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                {{ render(controller('SiteBundle:Text:Footer')) }}
            </div>
            <div class="col-lg-8 footerLinks">
                {{ render(controller('SiteBundle:Text:Text',{'tag':'footer-links'})) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ render(controller('SiteBundle:Category:All')) }}
            </div>
        </div>
    </div>
    <!-- /.container -->
</footer>


<script src="{{ asset('assets/vendor/tether/dist/js/tether.min.js') }}"></script>
<script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="/assets/vendor/ekko-lightbox/dist/ekko-lightbox.js"></script>

<script>
    $(document).on('click', '[data-toggle="lightbox"]', function(event) {
        event.preventDefault();
        $(this).ekkoLightbox();
    });

</script>


</body>
</html>