{% extends 'base.html.twig' %}

{% block body %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('assets/vendor/angular/angular.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/angular-sanitize/angular-sanitize.min.js') }}"></script>
        <script src="{{ asset('bundles/app/js/store.js') }}"></script>
    {% endblock %}


    <h1>
        <i class="fa fa-wrench" aria-hidden="true"></i>
        <i class="fa fa-cubes" aria-hidden="true"></i>
        {{ 'storebundle.warranty.populate.online %name%'|trans({'%name%':warranty.name}) }}
    </h1>

    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.product.portal','storebundle.menu.warranty'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>

    {% include 'LilWorksStoreBundle:Service:product-populator.html.twig' %}

{% endblock %}
