{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {% trans %}brand edit{% endtrans %}
    </h1>

    <div class="lilworks_list_showAction">
        <ul class="list-inline">
            <li class="list-inline-item">
                <a href="{{ path('brand_index') }}" class="btn btn-info btn-sm">
                    <i class="fa fa-list"></i> {% trans %}brand list{% endtrans %}
                </a>
            </li>
            <li class="list-inline-item">
                <a href="{{ path('brand_show', { 'id': brand.id }) }}" class="btn btn-info btn-sm">
                    <i class="fa fa-eye "></i> {% trans %}show{% endtrans %}
                </a>
            </li>

            <li class="list-inline-item">
                {% if
                    brand.products|length == 0
                %}
                    <a href="{{ path('brand_delete', { 'id': brand.id }) }}"  class="btn btn-danger btn-sm" >
                        <i class="fa fa-trash"></i> {% trans %}delete{% endtrans %}
                    </a>
                {% else %}
                    <del><i class="fa fa-trash"></i></del>
                {% endif %}
            </li>

        </ul>
    </div>

    <div class="row">
        <div class="row-sm-10 offset-2">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <input type="submit" class="btn btn-primary" value="{% trans %}edit{% endtrans %}" />
            {{ form_end(edit_form) }}
        </div>
    </div>

{% endblock %}
