{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {% trans %}basket list{% endtrans %}
    </h1>

    <div class="row">
        <div class="col-lg-3">
            <form method="get" action=".">
                {{ form_rest(formFilter) }} <input type="submit" class="btn btn-sm btn-primary" name="submit-filter" value="filter" />
            </form>

        </div>
        <div class="col-lg-6">
            {% transchoice pagination.getTotalItemCount %}
            {0} no basket found|{1} found one basket|]1,Inf[ found %count% baskets
            {% endtranschoice %}
            <div class="pagination">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>




    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>{% trans %}action{% endtrans %}</th>
                <th>{% trans %}productsCount{% endtrans %}</th>
                <th>{{ knp_pagination_sortable(pagination, 'token', 'b.token') }}</th>
                <th>{% trans %}user{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>


        {% for basket in pagination %}

            <tr>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('basket_show', { 'id': basket.id }) }}" class="btn btn-info btn-sm">
                                <i class="fa fa-eye"></i> {% trans %}show{% endtrans %}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('basket_edit', { 'id': basket.id }) }}" class="btn btn-info btn-sm">
                                <i class="fa fa-pencil "></i> {% trans %}edit{% endtrans %}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('basket_delete', { 'id': basket.id }) }}"  class="btn btn-danger btn-sm" >
                                <i class="fa fa-trash"></i> {% trans %}delete{% endtrans %}
                            </a>
                        </li>
                    </ul>
                </td>
                <td>
                    {% if basket.basketsProducts|length > 0 %}
                        {% for product in basket.basketsProducts %}
                            <a role="button" class="btn btn-sm btn-secondary" href="{{ path('product_show',{id:product.product.id}) }}">{{ product.product.brand.name ~ ' ' ~ product.product.name }} ({{ product.quantity }})</a>
                        {% endfor %}
                    {% else %}
                        <i class="fa fa-circle"></i>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('session_show',{id:basket.token}) }}">{{ basket.token }}</a>
                </td>
                <td>
                    {% if basket.user is not null %}
                        {{ basket.user.username }}
                    {% else %}
                        <i class="fa fa-circle"></i>
                    {% endif %}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}
