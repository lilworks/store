{% extends 'base.html.twig' %}

{% block body %}
    {% block javascripts %}
        {{ parent() }}
        <script>
            $( function() {
                FCE.init('shippingmethodsCountries','shippingmethodsCountries list-inline','shippingmethodsCountry list-inline-item');
            } );
        </script>
    {% endblock %}

    <h1>
        <i class="fa fa-flag" aria-hidden="true"></i>
        {{ 'storebundle.country.edit %name%'|trans({'%name%':country.name }) }}
    </h1>


    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.shipping.portal','storebundle.menu.country'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>

    {{ form_start(form) }}


    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />



    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#general" role="tab">{% trans %}storebundle.tab.general{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#shipping" role="tab">{% trans %}storebundle.country.alowedshippingmethods{% endtrans %}</a>
        </li>
    </ul>


    <div class="tab-content">
        <div class="tab-pane active" id="general" role="tabpanel">
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}

            {{ form_label(form.tag) }}
            {{ form_errors(form.tag) }}
            {{ form_widget(form.tag) }}

            {{ form_label(form.flag) }}
            {{ form_errors(form.flag) }}
            {{ form_widget(form.flag) }}

            {{ form_label(form.isPublished) }}
            {{ form_errors(form.isPublished) }}
            {{ form_widget(form.isPublished) }}
        </div>
        <div class="tab-pane" id="shipping" role="tabpanel">
            <h3>{% trans %}storebundle.country.alowedshippingmethods{% endtrans %}</h3>
            <ul class="shippingmethodsCountries list-inline " id="target" data-prototype="{{ form_widget(form.shippingmethodsCountries.vars.prototype)|e('html_attr') }}">
                {% for shippingmethodCountry in form.shippingmethodsCountries %}
                    <li class="shippingmethodCountrie list-inline-item">{{ form_row(shippingmethodCountry) }}</li>
                {% endfor %}
            </ul>
            {{ form_widget(form.shippingmethodsCountries) }}
        </div>
    </div>



    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />

    {{ form_end(form) }}




{% endblock %}
