{% extends 'base.html.twig' %}

{% block body %}
    {% block javascripts %}
        {{ parent() }}
        <script>
            $( function() {
                FCE.init('triggers','triggers list-inline','trigger list-inline-item');
            } );
        </script>
    {% endblock %}

    <h1>
        <i class="fa fa-flag" aria-hidden="true"></i>
        <i class="fa fa-truck" aria-hidden="true"></i>
        {{ 'storebundle.country.shippingmethod.edit %country%  %shippingmethod%'|trans({'%country%':shippingMethodsCountries.country.name , "%shippingmethod%":shippingMethodsCountries.shippingMethod.name }) }}
    </h1>


    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.shipping.portal','storebundle.menu.country'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>

    {{ form_start(form) }}


    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />



    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#general" role="tab">{% trans %}storebundle.tab.general{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#triggers" role="tab">{% trans %}storebundle.triggers{% endtrans %}</a>
        </li>
    </ul>


    <div class="tab-content">
        <div class="tab-pane active" id="general" role="tabpanel">
            {{ form_row(form.shippingMethod) }}
            {{ form_row(form.price) }}
            {{ form_row(form.priority) }}
            {{ form_row(form.isPublished) }}
            {{ form_row(form.delay) }}
        </div>
        <div class="tab-pane" id="triggers" role="tabpanel">
            <h3>{% trans %}storebundle.triggers{% endtrans %}</h3>
            <ul class="triggers list-inline " id="target" data-prototype="{{ form_widget(form.triggers.vars.prototype)|e('html_attr') }}">
                {% for trigger in form.triggers %}
                    <li class="trigger list-inline-item">{{ form_row(trigger) }}</li>
                {% endfor %}
            </ul>
            {{ form_widget(form.triggers) }}
        </div>
    </div>



    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />

    {{ form_end(form) }}




{% endblock %}
