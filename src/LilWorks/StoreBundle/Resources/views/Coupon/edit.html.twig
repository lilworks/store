{% extends 'base.html.twig' %}

{% block body %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('assets/vendor/summernote/dist/summernote-bs4.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap-datepicker/dist/css/bootstrap-datepicker.standalone.min.css') }}">
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="h{{ asset('assets/vendor/popper.js/dist/popper.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/summernote/dist/summernote-bs4.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/bootstrap-datepicker/js/locales/bootstrap-datepicker.fr.js') }}" charset="UTF-8"></script>
        <script>
            $( document ).ready(function() {

                $('.datepicker').datepicker({
                    language:'fr',
                    format: "dd/mm/yyyy"
                });

                $('.text-editor').summernote({
                    height: 200,
                    minHeight: null,
                    maxHeight: null,
                    focus: true,
                    toolbar: [
                        // [groupName, [list of button]]
                        ['style', ['bold', 'italic', 'underline', 'clear']],
                        ['font', ['strikethrough', 'superscript', 'subscript']],
                        ['fontsize', ['fontsize']],
                        ['color', ['color']],
                        ['para', ['ul', 'ol', 'paragraph']],
                        ['height', ['height']],
                        ['misc',['codeview','fullscreen']]
                    ]
                });
            });
        </script>
    {% endblock %}

    <h1>
        {% trans %}storebundle.coupon.edit{% endtrans %}
    </h1>
    <div class="btn-group btn-group-sm lw-storebundle-action" role="group" aria-label="actions" id="actions">
        <a href="{{ path('coupon_index') }}" class="btn btn-info btn-sm">
            <i class="fa fa-list" aria-hidden="true"></i> {% trans %}storebundle.link.list{% endtrans %}
        </a>
        <a href="{{ path('coupon_new') }}" class="btn btn-primary btn-sm">
            <i class="fa fa-plus" aria-hidden="true"></i> {% trans %}storebundle.link.new{% endtrans %}
        </a>
        <a href="{{ path('coupon_show', { coupon_id: coupon.id }) }}" class="btn btn-info btn-sm">
            <i class="fa fa-eye" aria-hidden="true"></i> {% trans %}storebundle.link.show{% endtrans %}
        </a>
        {% if coupon.ordersPaymentMethods|length != 0 %}{% set disabled = 'disabled' %}{% else %}{% set disabled = '' %}{% endif %}
        <a href="{{ path('coupon_delete', { coupon_id: coupon.id }) }}"  class="btn btn-danger btn-sm btn-delete {{ disabled }}" >
            <i class="fa fa-trash" aria-hidden="true"></i> {% trans %}storebundle.link.delete{% endtrans %}
        </a>

    </div>



    {{ form_start(form) }}
    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
    <div class="row">
        <div class="col col-lg-6">
            {{ form_row(form.customer) }}
        </div>
        <div class="col col-lg-6">
            {% if form.address is defined %}
                {{ form_row(form.address) }}
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col col-lg-3">
            {{ form_row(form.amount) }}
        </div>
        <div class="col col-lg-3">
            {{ form_row(form.validity) }}
        </div>
        <div class="col col-lg-3">
            {{ form_row(form.splitable) }}
        </div>
        <div class="col col-lg-3">
            {{ form_row(form.availableOnline) }}
        </div>
    </div>
    <div class="row">
        <div class="col col-lg-12" >
            {{ form_row(form.description) }}
        </div>
    </div>
    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
    {{ form_end(form) }}

{% endblock %}
