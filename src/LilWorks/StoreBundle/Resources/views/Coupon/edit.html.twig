{% extends 'base.html.twig' %}

{% block body %}


    <h1>
        <i class="fa fa-university" aria-hidden="true"></i>
        {{ 'storebundle.coupon.edit %reference%'|trans({'%reference%':coupon.reference }) }}
    </h1>


    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.document.portal','storebundle.menu.coupon'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>


    {{ form_start(form) }}
    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
    <div class="row">
        <div class="col col-lg-6">
            {{ form_row(form.customer) }}
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#customerModal">
                <i class="fa fa-plus"></i>
                <i class="fa fa-user"></i>
                {% trans %}storebundle.customer.new{% endtrans %}
            </button>


        </div>
        <div class="col col-lg-6">
            {% if form.address is defined %}
                {{ form_row(form.address) }}
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col col-lg-3">
            {{ form_row(form.amount) }}
        </div>
        <div class="col col-lg-3">
            {{ form_row(form.validity) }}
        </div>
        <div class="col col-lg-3">
            {{ form_row(form.splitable) }}
        </div>
        <div class="col col-lg-3">
            {{ form_row(form.availableOnline) }}
        </div>
    </div>
    <div class="row">
        <div class="col col-lg-12" >
            {{ form_row(form.description) }}
        </div>
    </div>
    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
    {{ form_end(form) }}
    {% include 'LilWorksStoreBundle:Customer:ajax-form.html.twig' %}
{% endblock %}
