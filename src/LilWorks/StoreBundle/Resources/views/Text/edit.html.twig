{% extends 'base.html.twig' %}

{% block body %}


    <h1>
        <i class="fa fa-font" aria-hidden="true"></i>
        {{ 'storebundle.text.edit %name%'|trans({'%name%':text.name}) }}
    </h1>

    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.config.portal','storebundle.menu.text'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>

    {{ form_start(form) }}
    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
    <div class="row">
        <div class="col-sm-12">
            {{ form_widget(form) }}
            <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
        </div>
    </div>


    {{ form_end(form) }}

{% endblock %}
