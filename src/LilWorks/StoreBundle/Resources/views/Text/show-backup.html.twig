{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        <i class="fa fa-font" aria-hidden="true"></i>
        <i class="fa fa-floppy-o" aria-hidden="true"></i>
        {{ 'storebundle.text.backup.show %textname% %backupid%'|trans({'%textname%':text.name,'%backupid%':backup.id}) }}
    </h1>



    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    {% trans %}storebundle.text.current{% endtrans %}

                    {% set linkparams = {
                    0:{icon:'eye',route:path('text_show',{text_id:text.id})},
                    1:{icon:'pencil',route:path('text_edit',{text_id:text.id})}}
                    %}
                    {{ text.name |linkbtn(linkparams)|raw }}
                </div>
                <div class="card-block">
                    <h4 class="card-title">
                        {{ text.title }}
                    </h4>
                    <div class="card-text">
                        <style>
                            {{ text.css|raw }}
                        </style>
                        {{ text.content|raw }}
                    </div>
                </div>
                <div class="card-footer text-muted">
                    {{ text.css|raw }}
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    {% trans %}storebundle.text.backup{% endtrans %}
                    <a href="{{ path('text_backup_apply',{textbackup_id:backup.id}) }}" role="button" class="btn btn-sm btn-warning">
                        <i class="fa fa-arrow-circle-up" aria-hidden="true"></i>
                    </a>
                    <a href="{{ path('text_backup_delete',{textbackup_id:backup.id}) }}" role="button" class="btn btn-sm  btn-danger">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                    {{ backup.createdAt|date('d/m/Y H:i') }}
                </div>
                <div class="card-block">
                    <h4 class="card-title"> {{ backup.title }}</h4>
                    <div class="card-text">
                        <style>
                            {{ backup.css|raw }}
                        </style>
                        {{ backup.content|raw }}
                    </div>
                </div>
                <div class="card-footer text-muted">
                    {{ backup.css|raw }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
