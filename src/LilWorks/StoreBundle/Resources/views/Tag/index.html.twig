{% extends 'base.html.twig' %}

{% block body %}
    {% block javascripts %}
        {{ parent() }}
        <script>
            $( document ).ready(function() {
                FF.init();
                RE.init('product_index');
            });
        </script>
    {% endblock %}
    <h1>
        {% trans %}lilworks.storebundle.tag.list{% endtrans %}
    </h1>

    <div class="row">
        <div class="col-lg-2">
            <div class="btn-group btn-group-sm lw-storebundle-action" role="group" aria-label="actions">
                <a href="{{ path('tag_new') }}" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus" aria-hidden="true"></i> {% trans %}lilworks.storebundle.link.new{% endtrans %}
                </a>
            </div>
        </div>
        <div class="col-lg-5">
            <form method="get" action="." class="formFilter">
                {{ form_rest(formFilter) }} <input type="submit" class="btn btn-sm btn-primary" name="submit-filter" value="{% trans %}lilworks.storebundle.button.filter{% endtrans %}" />
            </form>
        </div>
        <div class="col-lg-5">
            {% transchoice pagination.getTotalItemCount %}
            {0} no result found|{1} found one result|]1,Inf[ found %count% results
            {% endtranschoice %}
            <div class="pagination paginator">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>



    <table class="table table-striped">
        <thead>
            <tr>
                <th>{% trans %}lilworks.storebundle.action{% endtrans %}</th>
                <th>{% trans %}lilworks.storebundle.products{% endtrans %}</th>
                <th>{{ knp_pagination_sortable(pagination, 'lilworks.storebundle.product.name'|trans, 't.name') }}</th>
            </tr>
        </thead>
        <tbody>
        {% set entityName = 'LilWorksStoreBundle:Tag' %}


        {% for tag in pagination %}

            <tr>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('tag_show', { 'id': tag.id }) }}" class="btn btn-info btn-sm">
                                <i class="fa fa-eye"></i> {% trans %}lilworks.storebundle.link.show{% endtrans %}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('tag_edit', { 'id': tag.id }) }}" class="btn btn-primary btn-sm">
                                <i class="fa fa-pencil "></i> {% trans %}lilworks.storebundle.link.edit{% endtrans %}
                            </a>
                        </li>
                        <li>
                            {% if  tag.products|length == 0 %}
                                {% set disabled="" %}
                            {% else %}
                                {% set disabled="disabled" %}
                            {% endif %}
                            <a href="{{ path('tag_delete', { 'id': tag.id }) }}"  class="btn btn-danger btn-sm btn-delete {{ disabled }}" >
                                <i class="fa fa-trash"></i> {% trans %}lilworks.storebundle.link.delete{% endtrans %}
                            </a>
                        </li>
                    </ul>
                </td>
                <td>{{ tag.products|length  }}</td>

                <td>
                    {% set formType = 'LilWorks\\StoreBundle\\Form\\Ajax\\Tag\\NameType' %}
                    {{ simple_live_editor.getCol(formType,entityName,'name',tag)|raw }}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}
