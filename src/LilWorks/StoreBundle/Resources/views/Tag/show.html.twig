{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {{ 'storebundle.tag.show %name%'|trans({'%name%':tag.name}) }}
    </h1>

    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.product.portal','storebundle.menu.tag'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>


    <table class="table table-striped">
        <tbody>
            <tr>
                <th>{% trans %}storebundle.id{% endtrans %}</th>
                <td>#{{ tag.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.name{% endtrans %}</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.products{% endtrans %}</th>
                <td>
                    {% for product in  tag.products %}
                        <a role="button" class="btn btn-sm btn-secondary" href="{{ path('product_edit',{product_id: product.id}) }}">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                            {% if product.pictures|length > 0 %}
                                <img src="{{ asset('product/' ~ product.pictures[0].pictureName  ) | imagine_filter('mini') }}" />
                            {% endif %}
                            {{ product.brand.name }} {{ product.name }}
                        </a>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>


{% endblock %}
