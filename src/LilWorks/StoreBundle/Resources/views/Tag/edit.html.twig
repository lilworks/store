{% extends 'base.html.twig' %}

{% block body %}


    <h1>
        <i class="fa fa-tag" aria-hidden="true"></i>
        {{ 'storebundle.tag.edit %name%'|trans({'%name%':tag.name}) }}
    </h1>

    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.product.portal','storebundle.menu.tag'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>

    {{ form_start(form) }}
    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
    <div class="row">
        <div class="row-sm-10 offset-2">
            {{ form_widget(form) }}
            <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
            {{ form_end(form) }}
        </div>
    </div>




{% endblock %}
