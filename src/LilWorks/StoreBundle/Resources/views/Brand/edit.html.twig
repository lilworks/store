{% extends 'base.html.twig' %}

{% block body %}


    <h1>
        <i class="fa fa-copyright" aria-hidden="true"></i>
        {{ 'storebundle.brand.edit %name%'|trans({'%name%':brand.name}) }}
    </h1>

    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.product.portal','storebundle.menu.brand'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>

    {{ form_start(form) }}
    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
    <div class="row">
        <div class="row-sm-10 offset-2">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.isPublished) }}
            {% if  form.vars.data.pictureName %}
                <img src="{{ asset('brand/' ~  form.vars.data.pictureName  ) | imagine_filter('category_thumb') }}" />
            {% endif %}
            {{ form_row(form.pictureFile) }}
            {{ form_widget(form) }}
            <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />
            {{ form_end(form) }}
        </div>
    </div>




{% endblock %}
