{% extends 'base.html.twig' %}

{% block body %}


    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('assets/vendor/summernote/dist/summernote-bs4.css') }}">
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('assets/vendor/popper.js/dist/popper.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/summernote/dist/summernote-bs4.min.js') }}"></script>
        <script>
            $( function() {
                FCE.init('pictures','pictures list-inline','picture list-inline-item');

                $('.text-editor').summernote({
                    height: 200,
                    minHeight: null,
                    maxHeight: null,
                    focus: true,
                    toolbar: [
                        // [groupName, [list of button]]
                        ['style', ['bold', 'italic', 'underline', 'clear']],
                        ['font', ['strikethrough', 'superscript', 'subscript']],
                        ['fontsize', ['fontsize']],
                        ['color', ['color']],
                        ['para', ['ul', 'ol', 'paragraph']],
                        ['height', ['height']],
                        ['misc',['codeview','fullscreen']]
                    ]
                });
            } );
        </script>
    {% endblock %}


    <h1>
        {% trans %}lilworks.storebundle.product.edit{% endtrans %}
    </h1>

    <div class="btn-group btn-group-sm lw-storebundle-action" role="group" aria-label="actions">
        <a href="{{ path('product_index') }}" class="btn btn-info btn-sm">
            <i class="fa fa-list" aria-hidden="true"></i> {% trans %}lilworks.storebundle.link.list{% endtrans %}
        </a>
        <a href="{{ path('product_new') }}" class="btn btn-primary btn-sm">
            <i class="fa fa-plus" aria-hidden="true"></i> {% trans %}lilworks.storebundle.link.new{% endtrans %}
        </a>
        <a href="{{ path('product_show', { product_id: product.id }) }}" class="btn btn-info btn-sm">
            <i class="fa fa-eye" aria-hidden="true"></i> {% trans %}lilworks.storebundle.link.show{% endtrans %}
        </a>
        {% if  product.ordersProducts|length == 0 and product.reviews|length == 0 %}
            {% set disabled="" %}
        {% else %}
            {% set disabled="disabled" %}
        {% endif %}
        <a href="{{ path('product_delete', { product_id: product.id }) }}"  class="btn btn-danger btn-sm btn-delete {{ disabled }}" >
            <i class="fa fa-trash" aria-hidden="true"></i> {% trans %}lilworks.storebundle.link.delete{% endtrans %}
        </a>
    </div>

    {{ form_start(form) }}


    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}lilworks.storebundle.button.edit{% endtrans %}" />

    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#general" role="tab">{% trans %}lilworks.storebundle.tab.general{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#descriptions" role="tab">{% trans %}lilworks.storebundle.description{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#prices" role="tab">{% trans %}lilworks.storebundle.price{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#warranties" role="tab">{% trans %}lilworks.storebundle.warranties{% endtrans %}</a>
        </li>
        <li class="nav-item ">
            <a class="nav-link" data-toggle="tab" href="#shippingmethods" role="tab">{% trans %}lilworks.storebundle.shippingmethods{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#stocks" role="tab">{% trans %}lilworks.storebundle.stocks{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#specifications" role="tab">{% trans %}lilworks.storebundle.product.specifications{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#pictures" role="tab">{% trans %}lilworks.storebundle.pictures{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#more" role="tab">{% trans %}lilworks.storebundle.tab.more{% endtrans %}</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="general" role="tabpanel">
            {{ form_row(form.name) }}
            {{ form_row(form.brand) }}
            {{ form_row(form.categories) }}
            {{ form_row(form.isPublished) }}
            {{ form_row(form.isSecondHand) }}
        </div>
        <div class="tab-pane" id="descriptions" role="tabpanel">
            {{ form_row(form.description) }}
            {{ form_row(form.descriptionInternal) }}
        </div>
        <div class="tab-pane" id="prices" role="tabpanel">
            {{ form_row(form.priceOnline) }}
            {{ form_row(form.taxesOnline) }}
            {{ form_row(form.priceOffline) }}
            {{ form_row(form.taxesOffline) }}
            {{ form_row(form.priceBuying) }}
            {{ form_row(form.priceRetail) }}
        </div>
        <div class="tab-pane" id="warranties" role="tabpanel">
            {{ form_row(form.warrantiesOnline) }}
            {{ form_row(form.warrantiesOffline) }}
        </div>
        <div class="tab-pane" id="shippingmethods" role="tabpanel">
            {{ form_row(form.shippingMethods) }}
        </div>
        <div class="tab-pane" id="stocks" role="tabpanel">
            {{ form_row(form.stock) }}
            {{ form_row(form.leadTime) }}
            {{ form_row(form.alwaysAvailable) }}
        </div>
        <div class="tab-pane" id="specifications" role="tabpanel">
            {{ form_row(form.width) }}
            {{ form_row(form.height) }}
            {{ form_row(form.length) }}
            {{ form_row(form.weight) }}


            {{ form_row(form.docfiles) }}
        </div>
        <div class="tab-pane" id="pictures" role="tabpanel">

            <h3>{% trans %}pictures{% endtrans %}</h3>
            <ul class="pictures list-inline " id="target" data-prototype="{{ form_widget(form.pictures.vars.prototype)|e('html_attr') }}">
                {% for picture in form.pictures %}
                    <li class="picture list-inline-item">
                        <img class="rounded" src="{{ asset('product/' ~ picture.vars.value.pictureName  ) | imagine_filter('my_thumb') }}" />
                        {{ form_row(picture) }}
                    </li>
                {% endfor %}
            </ul>
            {{ form_widget(form.pictures) }}

        </div>

        <div class="tab-pane" id="more" role="tabpanel">
            {{ form_row(form.isReviewable) }}
            {{ form_row(form.relatedProducts) }}
            {{ form_row(form.tags) }}
        </div>
    </div>


    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}lilworks.storebundle.button.edit{% endtrans %}" />

    {{ form_end(form) }}

{% endblock %}
