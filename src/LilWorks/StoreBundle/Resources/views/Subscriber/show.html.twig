{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {{ 'appbundle.annonce.show %name%'|trans({'%name%': annonce.name }) }}
    </h1>


    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.config.portal','storebundle.menu.annonce'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>


    <table class="table table-striped">
        <tbody>
            <tr>
                <th>{% trans %}storebundle.id{% endtrans %}</th>
                <td>#{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.name{% endtrans %}</th>
                <td>{{ annonce.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.pos{% endtrans %}</th>
                <td>{{ annonce.pos }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.link{% endtrans %}</th>
                <td>{{ annonce.link }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.description{% endtrans %}</th>
                <td>{{ annonce.description|raw }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.picture{% endtrans %}</th>
                <td>
                    {% if annonce.pictureName %}
                        <img src="{{ asset('annonce/' ~ annonce.pictureName  ) | imagine_filter('annonce') }}" />
                    {% else %}
                        <i class="fa fa-circle-thin" style="color: red;"></i>
                    {% endif %}
                </td>
            </tr>

        </tbody>
    </table>


{% endblock %}
