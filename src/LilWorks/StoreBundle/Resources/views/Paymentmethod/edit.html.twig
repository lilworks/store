{% extends 'base.html.twig' %}

{% block body %}

    {% block javascripts %}
        {{ parent() }}
        <script>
            $( function() {
                MT.init('paymentmethods');
            } );
        </script>
    {% endblock %}

    <h1>
        <i class="fa fa-credit-card" aria-hidden="true"></i>
        {{ 'storebundle.paymentmethod.edit %name%'|trans({'%name%':paymentMethod.name}) }}
    </h1>

    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.payment.portal','storebundle.menu.paymentmethod'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>


    {{ form_start(form) }}


    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />


    <ul class="nav nav-tabs" role="tablist" id="paymentmethods">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#general" role="tab">{% trans %}storebundle.tab.general{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#datas" role="tab">{% trans %}storebundle.paymentmethod.data{% endtrans %}</a>
        </li>
    </ul>


    <div class="tab-content">
        <div class="tab-pane active" id="general" role="tabpanel">
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}

            {{ form_label(form.isPublished) }}
            {{ form_errors(form.isPublished) }}
            {{ form_widget(form.isPublished) }}

            {{ form_label(form.description) }}
            {{ form_errors(form.description) }}
            {{ form_widget(form.description) }}

            {{ form_label(form.pictureFile) }}
            {{ form_errors(form.pictureFile) }}
            {{ form_widget(form.pictureFile) }}
        </div>
        <div class="tab-pane" id="datas" role="tabpanel">
                {{ form_label(form.datas) }}
                {{ form_errors(form.datas) }}
                {{ form_widget(form.datas) }}
        </div>
    </div>


    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />

    {{ form_end(form) }}


{% endblock %}
