{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {% trans %}paymentmethod list{% endtrans %}
    </h1>

    <div class="row">
        <div class="col-md-6">

            <div id="content_menu">
                {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.user.portal','storebundle.menu.cat.customer'] , {context: 'content'}) %}
                {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
            </div>

        </div>
        <div class="col-md-6">
            <div class="pagination">
                {% transchoice pagination.getTotalItemCount %}
                {0} no result found|{1} found one result|]1,Inf[ found %count% results
                {% endtranschoice %}
                {{ knp_pagination_render(pagination) }}
            </div>
            <form method="get" action="." class="formFilter">
                {{ form_rest(formFilter) }} <input type="submit" class="btn btn-sm btn-secondary" name="submit-filter" value="{% trans %}storebundle.button.filter{% endtrans %}" />
            </form>
        </div>
    </div>



    <table class="table table-striped">
        <thead>
            <tr>
                <th>{% trans %}action{% endtrans %}</th>
                <th>{% trans %}name{% endtrans %}</th>
                <th>{% trans %}isPublishedOnline{% endtrans %}</th>
                <th>{% trans %}pictures{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% set entityName = 'LilWorksStoreBundle:PaymentMethod' %}
        {% for paymentMethod in pagination %}
            <tr>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('paymentmethod_show', { paymentmethod_id: paymentMethod.id }) }}" class="btn btn-info btn-sm">
                                <i class="fa fa-eye"></i> {% trans %}show{% endtrans %}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('paymentmethod_edit', { paymentmethod_id: paymentMethod.id }) }}" class="btn btn-info btn-sm">
                                <i class="fa fa-pencil "></i> {% trans %}edit{% endtrans %}
                            </a>
                        </li>
                        <li>

                            {% if  paymentMethod.ordersPaymentMethods|length == 0 %}
                                <a href="{{ path('paymentmethod_delete', { paymentmethod_id: paymentMethod.id }) }}"  class="btn btn-danger btn-sm" >
                                    <i class="fa fa-trash"></i> {% trans %}delete{% endtrans %}
                                </a>
                            {% else %}
                                <del><i class="fa fa-trash"></i></del>
                            {% endif %}
                        </li>
                    </ul>
                </td>
                <td>
                    {% set formType = 'LilWorks\\StoreBundle\\Form\\Ajax\\PaymentMethod\\NameType' %}
                    {{ simple_live_editor.getCol(formType,entityName,'name',paymentMethod)|raw }}
                </td>
                <td>
                    {% set formType = 'LilWorks\\StoreBundle\\Form\\Ajax\\PaymentMethod\\IsPublishedType' %}
                    {{ simple_live_editor.getCol(formType,entityName,'isPublished',paymentMethod)|raw }}
                </td>
                <td>
                    {% if paymentMethod.pictureName %}
                        <img src="{{ asset('paymentmethod/' ~ paymentMethod.pictureName  ) | imagine_filter('my_thumb') }}" />
                    {% else %}
                        <i class="fa fa-circle"></i>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
