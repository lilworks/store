{% extends 'base.html.twig' %}

{% block body %}


    <h1>
        <i class="fa fa-pie-chart" aria-hidden="true"></i>
        {{ 'storebundle.tax.new %name%'|trans({'%name%':tax.name}) }}
    </h1>

    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.payment.portal','storebundle.menu.tax'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>


    {{ form_start(form) }}


    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />


    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#general" role="tab">{% trans %}storebundle.tab.general{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#products" role="tab">{% trans %}storebundle.products{% endtrans %}</a>
        </li>
    </ul>


    <div class="tab-content">
        <div class="tab-pane active" id="general" role="tabpanel">
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}

            {{ form_label(form.type) }}
            {{ form_errors(form.type) }}
            {{ form_widget(form.type) }}

            {{ form_label(form.value) }}
            {{ form_errors(form.value) }}
            {{ form_widget(form.value) }}

        </div>
        <div class="tab-pane" id="products" role="tabpanel">
            <div>
                {{ form_label(form.productsOnline) }}
                {{ form_errors(form.productsOnline) }}
                {{ form_widget(form.productsOnline) }}
            </div>
            <div>
                {{ form_label(form.productsOffline) }}
                {{ form_errors(form.productsOffline) }}
                {{ form_widget(form.productsOffline) }}
            </div>
        </div>
    </div>


    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}storebundle.button.edit{% endtrans %}" />

    {{ form_end(form) }}



{% endblock %}
