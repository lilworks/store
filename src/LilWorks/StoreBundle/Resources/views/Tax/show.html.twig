{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {% trans %}storebundle.tax.show{% endtrans %}
    </h1>

    <div class="btn-group btn-group-sm lw-storebundle-action" role="group" aria-label="actions">
        <a href="{{ path('tax_index') }}" class="btn btn-info btn-sm">
            <i class="fa fa-list" aria-hidden="true"></i> {% trans %}storebundle.link.list{% endtrans %}
        </a>
        <a href="{{ path('tax_new') }}" class="btn btn-primary btn-sm">
            <i class="fa fa-plus" aria-hidden="true"></i> {% trans %}storebundle.link.new{% endtrans %}
        </a>
        <a href="{{ path('tax_edit', { 'id': tax.id }) }}" class="btn btn-primary btn-sm">
            <i class="fa fa-pencil" aria-hidden="true"></i> {% trans %}storebundle.link.edit{% endtrans %}
        </a>
        {% if tax.productsOffline|length == 0 and tax.productsOnline|length == 0 and tax.ordersProducts|length == 0%}
            {% set disabled = '' %}
        {% else %}
            {% set disabled = 'disabled' %}
        {% endif %}
        <a href="{{ path('tax_delete', { 'id': tax.id }) }}"  class="btn btn-danger btn-sm btn-delete {{ disabled }}" >
            <i class="fa fa-trash" aria-hidden="true"></i> {% trans %}storebundle.link.delete{% endtrans %}
        </a>
    </div>


    <table class="table table-striped">
        <tbody>
        <tr>
            <th>{% trans %}storebundle.name{% endtrans %}</th>
            <td>{{ tax.name }}</td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.value{% endtrans %}</th>
            <td>{{ tax.value }}</td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.type{% endtrans %}</th>
            <td>{{ tax.type|raw }}</td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.ordersproducts{% endtrans %}</th>
            <td>
                {% for product in  tax.ordersProducts %}
                    <a role="button" class="btn btn-sm btn-secondary" href="{{ path('order_edit',{id: product.order.id}) }}">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        {% if product.product.pictures|length > 0 %}
                            <img src="{{ asset('product/' ~ product.product.pictures[0].pictureName  ) | imagine_filter('mini') }}" />
                        {% endif %}
                        {{ product.order.reference }} {{ product.name }}
                    </a>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.productsoffline{% endtrans %}</th>
            <td>
                {% for product in tax.productsOffline %}
                    <a role="button" class="btn btn-sm btn-secondary" href="{{ path('product_edit',{id: product.id}) }}">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        {% if product.pictures|length > 0 %}
                            <img src="{{ asset('product/' ~ product.pictures[0].pictureName  ) | imagine_filter('mini') }}" />
                        {% endif %}
                        {{ product.brand.name }} {{ product.name }}
                    </a>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.productsonline{% endtrans %}</th>
            <td>

                {% for product in tax.productsOnline %}
                    <a role="button" class="btn btn-sm btn-secondary" href="{{ path('product_edit',{id: product.id}) }}">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        {% if product.pictures|length > 0 %}
                            <img src="{{ asset('product/' ~ product.pictures[0].pictureName  ) | imagine_filter('mini') }}" />
                        {% endif %}
                        {{ product.brand.name }} {{ product.name }}
                    </a>
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

{% endblock %}
