{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {{ 'storebundle.tax.show %name%'|trans({'%name%':tax.name}) }}
    </h1>


    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.payment.portal','storebundle.menu.tax'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>


    <table class="table table-striped">
        <tbody>
        <tr>
            <th>{% trans %}storebundle.name{% endtrans %}</th>
            <td>{{ tax.name }}</td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.value{% endtrans %}</th>
            <td>{{ tax.value }}</td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.type{% endtrans %}</th>
            <td>{{ tax.type|raw }}</td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.ordersproducts{% endtrans %}</th>
            <td>
                {% for product in  tax.ordersProducts %}
                    <a role="button" class="btn btn-sm btn-secondary" href="{{ path('order_edit',{order_id: product.order.id}) }}">
                        {% if product.product is not null %}
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                            {% if product.product.pictures|length > 0 %}
                                <img src="{{ asset('product/' ~ product.product.pictures[0].pictureName  ) | imagine_filter('mini') }}" />
                            {% endif %}
                            {{ product.order.reference }} {{ product.name }}
                        {% else %}
                            {{ product.name }}
                        {% endif %}
                    </a>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.productsoffline{% endtrans %}</th>
            <td>
                {% for product in tax.productsOffline %}
                    <a role="button" class="btn btn-sm btn-secondary" href="{{ path('product_edit',{product_id: product.id}) }}">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        {% if product.pictures|length > 0 %}
                            <img src="{{ asset('product/' ~ product.pictures[0].pictureName  ) | imagine_filter('mini') }}" />
                        {% endif %}
                        {{ product.brand.name }} {{ product.name }}
                    </a>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>{% trans %}storebundle.tax.productsonline{% endtrans %}</th>
            <td>

                {% for product in tax.productsOnline %}
                    <a role="button" class="btn btn-sm btn-secondary" href="{{ path('product_edit',{order_id: product.id}) }}">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        {% if product.pictures|length > 0 %}
                            <img src="{{ asset('product/' ~ product.pictures[0].pictureName  ) | imagine_filter('mini') }}" />
                        {% endif %}
                        {{ product.brand.name }} {{ product.name }}
                    </a>
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

{% endblock %}
