{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {% trans %}lilworks.storebundle.shippingmethod.new{% endtrans %}
    </h1>

    <div class="btn-group btn-group-sm lw-storebundle-action" role="group" aria-label="actions">
        <a href="{{ path('shippingmethod_index') }}" class="btn btn-info btn-sm">
            <i class="fa fa-list" aria-hidden="true"></i> {% trans %}lilworks.storebundle.link.list{% endtrans %}
        </a>
    </div>

    {{ form_start(form) }}

    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}lilworks.storebundle.button.create{% endtrans %}" />

    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#general" role="tab">{% trans %}lilworks.storebundle.tab.general{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#products" role="tab">{% trans %}lilworks.storebundle.products{% endtrans %}</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="general" role="tabpanel">
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-lg-4">
                    {{ form_row(form.price) }}
                </div>
                <div class="col-lg-4">
                    {{ form_row(form.freeTrigger) }}
                </div>

            </div>
            <div class="row">
                <div class="col-lg-3">
                    {{ form_row(form.isPublished) }}
                </div>
                <div class="col-lg-3">
                    {{ form_row(form.priority) }}
                </div>
                <div class="col-lg-3">
                    {{ form_row(form.delay) }}
                </div>
                <div class="col-lg-3">
                    {{ form_row(form.pictureFile) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    {{ form_row(form.description) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.descriptionInternal) }}
                </div>
            </div>
        </div>
        <div class="tab-pane" id="products" role="tabpanel">
            {{ form_row(form.products) }}
        </div>
    </div>



    <input type="submit" class="btn btn-sm btn-success" value="{% trans %}lilworks.storebundle.button.create{% endtrans %}" />

    {{ form_end(form) }}



{% endblock %}