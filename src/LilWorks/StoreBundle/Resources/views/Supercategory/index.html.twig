{% extends 'base.html.twig' %}
{% block body %}
    {% block javascripts %}
    {{ parent() }}
    <script>
        $( document ).ready(function() {
            FF.init();
            RE.init('supercategory_index');
        });
    </script>
{% endblock %}
<h1>
    {% trans %}lilworks.storebundle.supercategory.list{% endtrans %}
</h1>

<div class="row">
    <div class="col-lg-2">
        <div class="btn-group btn-group-sm lw-storebundle-action" role="group" aria-label="actions">
            <a href="{{ path('supercategory_new') }}" class="btn btn-primary btn-sm">
                <i class="fa fa-plus" aria-hidden="true"></i> {% trans %}lilworks.storebundle.link.new{% endtrans %}
            </a>
        </div>
    </div>
    <div class="col-lg-5">
        <form method="get" action="." class="formFilter">
            {{ form_rest(formFilter) }} <input type="submit" class="btn btn-sm btn-primary" name="submit-filter" value="{% trans %}lilworks.storebundle.button.filter{% endtrans %}" />
        </form>
    </div>
    <div class="col-lg-5">
        {% transchoice pagination.getTotalItemCount %}
        {0} no result found|{1} found one result|]1,Inf[ found %count% results
        {% endtranschoice %}
        <div class="pagination paginator">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>



<table class="table table-striped">
        <thead>
        <tr>
            <th>{% trans %}lilworks.storebundle.action{% endtrans %}</th>
            <th>
                {{ rowsLiveEditor.getActions()|raw }}
            </th>
            <th>{{ knp_pagination_sortable(pagination, 'lilworks.storebundle.ispublished'|trans, 'b.isPublished') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'lilworks.storebundle.pos'|trans, 'b.pos') }}</th>
            <th>{% trans %}lilworks.storebundle.categories{% endtrans %}</th>
            <th>{{ knp_pagination_sortable(pagination, 'lilworks.storebundle.name'|trans, 'b.name') }}</th>
            <th>{% trans %}lilworks.storebundle.pictures{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% set entityName = 'LilWorksStoreBundle:SuperCategory' %}
        {% for superCategory in pagination %}
            <tr>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('supercategory_show', { 'id': superCategory.id }) }}" class="btn btn-info btn-sm">
                                <i class="fa fa-eye"></i> {% trans %}lilworks.storebundle.link.show{% endtrans %}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('supercategory_edit', { 'id': superCategory.id }) }}" class="btn btn-primary btn-sm">
                                <i class="fa fa-pencil "></i> {% trans %}lilworks.storebundle.link.edit{% endtrans %}
                            </a>
                        </li>
                        <li>
                            {% if superCategory.supercategoriesCategories|length == 0 %}
                                {% set disabled="" %}
                            {% else %}
                                {% set disabled="disabled" %}
                            {% endif %}
                            <a href="{{ path('supercategory_delete', { 'id': superCategory.id }) }}"  class="btn btn-danger btn-sm btn-delete {{ disabled }}" >
                                <i class="fa fa-trash"></i> {% trans %}lilworks.storebundle.link.delete{% endtrans %}
                            </a>
                        </li>
                    </ul>

                </td>
                <td>
                    {{ rowsLiveEditor.getRowCheckbox( superCategory.id )|raw }}
                </td>
                <td>
                    {% set formType = 'LilWorks\\StoreBundle\\Form\\Ajax\\SuperCategory\\IsPublishedType' %}
                    {{ simple_live_editor.getCol(formType,entityName,'isPublished',superCategory)|raw }}
                </td>

                <td>
                    {% set formType = 'LilWorks\\StoreBundle\\Form\\Ajax\\SuperCategory\\PosType' %}
                    {{ simple_live_editor.getCol(formType,entityName,'pos',superCategory)|raw }}
                </td>
                <td>{{ superCategory.supercategoriesCategories|length }}</td>

                <td>
                    {% set formType = 'LilWorks\\StoreBundle\\Form\\Ajax\\SuperCategory\\NameType' %}
                    {{ simple_live_editor.getCol(formType,entityName,'name',superCategory)|raw }}
                </td>
                <td>
                    {% if superCategory.pictureName %}
                        <img src="{{ asset('superCategory/' ~ superCategory.pictureName  ) | imagine_filter('my_thumb') }}" />
                    {% else %}
                        <i class="fa fa-circle" ></i>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}
