{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {{ 'storebundle.docfile.show %name%'|trans({'%name%':docfile.docName}) }}
    </h1>


    <div id="content_menu">
        {% set menu = knp_menu_get('AppBundle:StoreBuilder:build', ['storebundle.menu.cat.product.portal','storebundle.menu.docfile'] , {context: 'content'}) %}
        {{ knp_menu_render(menu , {'template': 'LilWorksStoreBundle:Menu:content.html.twig'}) }}
    </div>


    <table class="table table-striped">
        <tbody>
            <tr>
                <th>{% trans %}storebundle.docname{% endtrans %}</th>
                <td>{{ docfile.docName }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.title{% endtrans %}</th>
                <td>{{ docfile.title }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.description{% endtrans %}</th>
                <td>{{ docfile.description|raw }}</td>
            </tr>
            <tr>
                <th>{% trans %}storebundle.products{% endtrans %}</th>
                <td>
                    {% if docfile.products|length > 0 %}
                        {% for product in docfile.products %}
                            <a role="button" class="btn btn-sm btn-secondary" href="{{ path('product_show',{product_id: product.id}) }}">
                                <i class="fa fa-pencil" aria-hidden="true"></i> {{ product.name }}
                            </a>
                        {% endfor %}
                    {% else %}
                        <i class="fa fa-circle-thin" style="color: red;"></i>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>


{% endblock %}
