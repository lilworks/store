{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {% trans %}lilworks.storebundle.annonce.show{% endtrans %}
    </h1>

    <div class="lilworks_list_showAction">
        <ul class="list-inline">
            <li class="list-inline-item">
                <a href="{{ path('annonce_index') }}" class="btn btn-info btn-sm">
                    <i class="fa fa-list"></i> {% trans %}lilworks.storebundle.link.list{% endtrans %}
                </a>
            </li>
            <li class="list-inline-item">
                <a href="{{ path('annonce_edit', { 'id': annonce.id }) }}" class="btn btn-info btn-sm">
                    <i class="fa fa-pencil "></i> {% trans %}lilworks.storebundle.link.edit{% endtrans %}
                </a>
            </li>

            <li class="list-inline-item">
                    <a href="{{ path('annonce_delete', { 'id': annonce.id }) }}"  class="btn btn-warning btn-sm" >
                        <i class="fa fa-trash"></i> {% trans %}lilworks.storebundle.link.delete{% endtrans %}
                    </a>
            </li>
        </ul>
    </div>


    <table class="table table-striped">
        <tbody>
            <tr>
                <th>{% trans %}lilworks.storebundle.id{% endtrans %}</th>
                <td>#{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}lilworks.storebundle.name{% endtrans %}</th>
                <td>{{ annonce.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}lilworks.storebundle.pos{% endtrans %}</th>
                <td>{{ annonce.pos }}</td>
            </tr>
            <tr>
                <th>{% trans %}lilworks.storebundle.link{% endtrans %}</th>
                <td>{{ annonce.link }}</td>
            </tr>
            <tr>
                <th>{% trans %}lilworks.storebundle.description{% endtrans %}</th>
                <td>{{ annonce.description|raw }}</td>
            </tr>
            <tr>
                <th>{% trans %}lilworks.storebundle.picture{% endtrans %}</th>
                <td>
                    {% if annonce.pictureName %}
                        <img src="{{ asset('annonce/' ~ annonce.pictureName  ) | imagine_filter('annonce') }}" />
                    {% else %}
                        <i class="fa fa-circle-thin" style="color: red;"></i>
                    {% endif %}
                </td>
            </tr>

        </tbody>
    </table>


{% endblock %}
