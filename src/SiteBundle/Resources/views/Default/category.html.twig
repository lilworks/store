{% extends 'base2col.html.twig' %}

{% block body %}
    {% block stylsheets %}
        {{ parent() }}
        <style>
            .price-range-disabled{
                visibility: hidden;
                height: 0;
            }
        </style>
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script>
            $( document ).ready(function() {
                $(".selectpicker").selectpicker();
                $(".price-range").slider({
                    formatter: function(value) {
                        return  value + "â‚¬";
                    }
                });
            });

        </script>

    {% endblock %}




<div class="col-md-3">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-filter" aria-hidden="true"></i>
            {{ 'sitebundle.filter'|trans }}
        </div>
        <div class="card-block">
            <p class="card-text">
            <form method="get"  class="formFilter">
                {{ form_rest(formFilter) }}
                <input type="submit" class="btn btn-sm btn-secondary" name="submit-filter" value="{{ 'sitebundle.button.filter'|trans }}" />
            </form>

        </div>
    </div>

</div>
<!-- /.col-lg-3 -->
<div class="col-md-9">


    <div class="card">
        <div class="card-header">

            <div class="row">
                <div class="col-md-6">
                    <h3>
                        <img src="{{ asset('category/'~category.pictureName) | imagine_filter('card_header') }}" />
                        {{ category.name }}
                        {% if pagination is defined %}
                            ({{ pagination.getTotalItemCount }})
                        {% endif %}
                    </h3>
                </div>
                <div class="col-md-6" >
                    {% if category.supercategoriesCategories|length>0 %}
                        {% if category.supercategoriesCategories|length==1 %}
                            <a class="btn btn-secondary" href="{{ path('site_supercategory',{'tag':category.supercategoriesCategories[0].supercategory.tag}) }}" style="float: right;">
                                <img src="{{ asset('supercategory/'~category.supercategoriesCategories[0].supercategory.pictureName) | imagine_filter('mini') }}" />
                                {{ category.supercategoriesCategories[0].supercategory.name }}
                            </a>
                        {% else %}
                            <div class="dropdown" style="float: right;">
                                <a class="btn btn-secondary dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                    {{ 'sitebundle.supercategories' }}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    {% for supercategorycategory in category.supercategoriesCategories %}
                                        {% set supercategory = supercategorycategory.supercategory %}
                                        {% if category.isPublished %}
                                            <a class="dropdown-item" href="{{ path('site_supercategory',{'tag':supercategory.tag}) }}">
                                                <img src="{{ asset('supercategory/'~supercategory.pictureName) | imagine_filter('mini') }}" />
                                                {{ supercategory.name }}
                                            </a>
                                        {% endif %}
                                    {% endfor %}

                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="card-block">
            <div class="card-text">
                {% if pagination is defined %}
                    <div class="pagination">
                        {{ knp_pagination_render(pagination) }}
                        <span class="alert alert-info" role="alert" >
                            <i class="fa fa-sort" aria-hidden="true"></i>
                            {{ knp_pagination_sortable(pagination, 'sitebundle.priceorder'|trans, 'p.priceOnline') }}
                        </span>
                    </div>
                {% endif %}
                <div class="row">
                    {% for product in pagination %}
                        {{ productService.getProduct(product.id)|raw }}
                    {% endfor %}
                </div>


                {% if pagination is defined %}
                    <div class="pagination">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>


</div>






{% endblock %}
