{% extends 'baseUser.html.twig' %}

{% block body %}

    <h1>
        <i class="fa fa-file-text-o" aria-hidden="true"></i>  {% trans %}order{% endtrans %} {{ order.reference }}
    </h1>




    <ul class="list-inline">
        <li class="list-inline-item">
            <a href="{{ path('site_order') }}" class="btn btn-primary btn-sm">
                <i class="fa fa-list"></i> {% trans %}orders list{% endtrans %}
            </a>
        </li>
        {% if order.ordersOrderSteps|length > 0 and
        order.ordersOrderSteps[0].orderStep.tag == "WAITING_PAYMENT"
        %}
            <li class="list-inline-item">
                <a href="{{ path('site_order_pay', { 'id': order.id }) }}" class="btn btn-success btn-sm">
                    <i class="fa fa-euro"></i> {% trans %}pay{% endtrans %}
                </a>

            </li>
            <li class="list-inline-item">

                <a href="{{ path('site_order_remove', { 'id': order.id }) }}" class="btn btn-danger btn-sm">
                    <i class="fa fa-trash"></i> {% trans %}cancel{% endtrans %}
                </a>

            </li>
        {% endif %}
        {% if order.ordersOrderSteps|length > 0 and
        order.ordersOrderSteps[0].orderStep.tag == "DONE"
        %}
            <li>

                <a href="{{ path('site_order_pdf', { 'id': order.id }) }}" class="btn btn-primary btn-sm">
                    <i class="fa fa-file"></i> {% trans %}download pdf{% endtrans %}
                </a>

            </li>
        {% endif %}
    </ul>
    <div class="row">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-block">
                    <h3 class="card-title">{% trans %}order step{% endtrans %}</h3>
                    <ul class="list-group">
                        {%  for orderOrderStep in order.ordersOrderSteps  %}
                            <li class="list-group-item">{{ orderOrderStep.createdAt|date }} <span class="badge badge-default">{{ orderOrderStep.orderStep.name }}</span></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-block">
                    <h3 class="card-title">{% trans %}payment method{% endtrans %}</h3>
                    {%  for orderPaymentMethod in order.ordersPaymentMethods  %}
                        <li class="list-group-item">{{ orderPaymentMethod.payedAt|date }}
                            {{ orderPaymentMethod.paymentMethod.name }}
                            <span class="badge badge-default">{{ orderPaymentMethod.amount|price }}</span></li>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="card">
                <div class="card-block">
                    <h3 class="card-title">{% trans %}addresses{% endtrans %}</h3>
                    {% if order.shippingAddressString == order.billingAddressString %}
                        <h5>{% trans %}shipping and billing addresses{% endtrans %}</h5>
                    <p class="card-text">{{ order.shippingAddressString }}</p>
                    {% else %}
                        {% if order.shippingAddressString != "" %}
                            <h5>{% trans %}shipping address{% endtrans %}</h5>
                            <p class="card-text">{{ order.shippingAddressString }}</p>
                        {% endif %}
                        {% if order.billingAddressString != "" %}
                            <h5>{% trans %}billing address{% endtrans %}</h5>
                            <p class="card-text">{{ order.billingAddressString }}</p>
                        {% endif %}
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped">

        <thead>
        <th>{% trans %}product{% endtrans %}</th>
        <th>{% trans %}quantity{% endtrans %}</th>
        <th>{% trans %}price unity{% endtrans %}</th>
        <th>{% trans %}price{% endtrans %}</th>
        </thead>

        <tbody>

        {%   for product in order.ordersProducts %}
            <tr>
                <td>
                    {% if product.product.pictures[0].pictureName is defined %}
                        <img src="{{ asset('product/'~product.product.pictures[0].pictureName) | imagine_filter('mini') }}" />
                    {% endif %}
                    {{ product.product.brand.name }} {{ product.product.name }}

                    {% if product.product.isSecondHand == 1 %}
                        <span class="alert alert-danger btn-sm" role="alert">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                            {% trans %}isSecondHand{% endtrans %}
                        </span>
                    {% endif %}
                    {{ product.product.warrantiesOnline|warranties|raw }}
                </td>
                <td>
                    {{ product.quantity }}

                </td>
                <td>
                    {{ product.product.priceOnline|price }}
                    {{ product.product.taxesOnline|taxes|raw }}
                </td>
                <td>{{ (product.product.priceOnline * product.quantity)|price }}</td>
            </tr>
        {% endfor %}

        <tr>
            <td  colspan="4" >
                <ul class="list-group">
                {% for orderShippingMethod in order.ordersRealShippingMethods %}
                    <li class="list-group-item">
                        {{  orderShippingMethod.shippingMethod.name }}

                        {{  orderShippingMethod.price|price }}

                        {% for orderProduct in orderShippingMethod.ordersProducts %}
                            <span class="badge badge-default">{{ orderProduct.name }}</span>
                        {% endfor %}

                    </li>
                {% endfor %}
                </ul>
            </td>
        </tr>

        <tr>
            {% set totals = order.ordersProducts|totalCalculator %}
            <td class="bg-info" colspan="4" >
                {% trans %}total: {% endtrans %}
                <style>
                    .priceTTC{
                        font-size: 1.6em;
                        font-weight: bold;
                    }
                    .priceSM{
                        font-size: 1.8em;
                        font-weight: bold;
                    }
                </style>
                <div class="priceTTC">{{ totals['ttc']|price }}<sup>TTC</sup></div>
                <div class="priceHt">{{ totals['ht']|price }}<sup>HT</sup></div>


            </td>
        </tr>
        </tbody>
    </table>


{% endblock %}
